{
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/incodepany/unified-diff-patcher"
    }
  ],
  "require": {
    "vaimo/unified-diff-patcher": "dev-master"
  },
  "scripts": {
    "post-install-cmd": [
      "find vendor -type d -name '.git' -exec rm -rf {} +"
    ],
    "post-update-cmd": [
      "find vendor -type d -name '.git' -exec rm -rf {} +"
    ]
  }
}
